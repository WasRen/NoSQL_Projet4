{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <div class="md-5">
        <button type="button" onclick="location.href='{{ path('movie_index') }}'" class="btn btn-primary btn-lg" style="color:#3B4CCA;" >Retour au Catalogue</button>
    </div>
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ movie.price }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ movie.genre }}</td>
            </tr>
            <tr>
                <th>Ranking</th>
                <td>{{ movie.rotten_tomatoes }}</td>
            </tr>
            <tr>
                <th>Ranking</th>
                <td>{{ movie.duration }}</td>
            </tr>
        </tbody>
    </table>

    
    <div class="md-5">
        <button type="button" onclick="location.href='{{ path('ajout_panier', {'movieid' : movie.movieid})}}'" class="btn btn-primary btn-lg" style="color:#3B4CCA;" >Ajouter au Panier</button>
    </div>

{% endblock %}
