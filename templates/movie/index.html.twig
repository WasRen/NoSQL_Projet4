{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movie index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Movieid</th>
                <th>Movie Title </th>
                <th> Actions <th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies.hits.hits %}
            <tr>
                <td>{{ movie._source.movieid }}</td>
                <td>
                    <div class= "row justify-content-center">
                        {{movie._source.title}}
                    </div>
                </td>
                <td>
                    <div class="row justify-content-center">
                        <div class="md-5">
                            <button type="button" onclick="location.href='{{ path('movie_show', {'movieid' : movie._source.movieid}) }}'" class="btn btn-primary btn-lg" style="color:#3B4CCA; ">Detail</button>
                        </div>
                        <div class="md-2">

                        </div>
                        <div class="md-5">
                            <button type="button" onclick="location.href='{{ path('movie_index')}}'" class="btn btn-primary btn-lg" style="color:#3B4CCA;" >Editer</button>
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
