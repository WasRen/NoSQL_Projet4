{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movie index</h1>
    <table class="table">
        <thead>
        <div>
            <tr>
                <th class="text-center">Movieid</th>
                <th class="text-center">Movie Title </th>
                <th class="text-center"> Actions <th>
            </tr>
        </div>
        </thead>
        <tbody>
        {% if movies %}
        {% for movie in movies.hits.hits %}
            <tr>
                <td class="text-center" >{{ movie._source.movieid }}</td>
                <td>
                    <div class= "row justify-content-center">
                        {{movie._source.title}}
                    </div>
                </td>
                <td>
                    <div class="row justify-content-center">
                        <div class="md-5">
                            <button type="button" onclick="location.href='{{ path('movie_show', {'movieid' : movie._source.movieid}) }}'" class="btn btn-primary btn-lg" style="color:#3B4CCA; ">Detail</button>
                        </div>
                        <div class="md-5">
                            <button type="button" onclick="location.href='{{ path('ajout_panier', {'movieid' : movie._source.movieid})}}'" class="btn btn-primary btn-lg" style="color:#3B4CCA;" >Ajouter au Panier</button>
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        {% endif %}
        </tbody>
    </table>

{% endblock %}
